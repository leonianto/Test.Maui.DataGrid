<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.DataGrid.DataGridUserPreferencesSetup"
             Title="Riordina colonne">
    <VerticalStackLayout>

        <CollectionView x:Name="ColumnsList" Margin="10" WidthRequest="300" SelectionMode="Multiple" CanReorderItems="True">
            <CollectionView.ItemTemplate >
                <DataTemplate>
                    <Border Stroke="#FFFFFFFF" BackgroundColor="White" StrokeThickness="2" StrokeShape="RoundRectangle 8,8,8,8" HorizontalOptions="Center">
                        <Label Text="{Binding Title}" FontSize="16" HeightRequest="30" Margin="5" HorizontalOptions="Center" TextColor="Black"></Label>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
